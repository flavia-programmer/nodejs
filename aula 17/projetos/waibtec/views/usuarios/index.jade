extends ../layout

block content
  h1 Listagem de Usuários
  br
  a(href="/usuarios/create" title="Cadastrar", class="btn btn-success") Cadastrar
  br
  if msgUpdate
    div (class="alert alert-info")
      p Registro atualizado com sucesso!
  br
  table(class="table")
    thead
      tr
        th ID:
        th Nome:
        th Login:
        th Senha:
        th Data:
        th Ações:
    tbody
      each valor, i in lista
        tr
          td #{valor._id}
          td #{valor.nome}
          td #{valor.login}
          td #{valor.senha}
          td #{valor.data_cad}
          td
            a(href="/usuarios/edit/#{valor._id}", title="Editar", class="btn btn-info")
              span(class="glyphicon glyphicon-pencil")
            &nbsp
            a(href="/usuarios/show/#{valor._id}", title="Editar", class="btn btn-primary")
              span(class="glyphicon glyphicon-search")
      
  
